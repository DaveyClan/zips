<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.daveyclanwizard" 
       name="[COLOR orchid]DaveyClan[/COLOR]" 
       version="1.0.0" 
       provider-name="DaveyClan">

  <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.six" />
      <import addon="script.module.kodi-six" />
  </requires>

  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>

  <!-- Keep service if Crew wizard used it -->
  <extension point="xbmc.service" library="startup.py" start="startup" />

  <extension point="xbmc.addon.metadata">
      <summary lang="en">DaveyClan Wizard provides the best builds, skins, and add-ons for Kodi users.</summary>
      <description lang="en">Many come, many go. The true and dedicated are here with DaveyClan Wizard.</description>
      <platform>all</platform>
      <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
      <disclaimer lang="en">The author of this addon does not host any content. It provides scripts and links for Kodi users. Use at your own risk.</disclaimer>
      <assets>
          <icon>icon.png</icon>
          <fanart>fanart.jpg</fanart>
          <screenshot>resources/art/ss/1.png</screenshot>
          <screenshot>resources/art/ss/2.png</screenshot>
          <screenshot>resources/art/ss/3.png</screenshot>
      </assets>
  </extension>

</addon>
